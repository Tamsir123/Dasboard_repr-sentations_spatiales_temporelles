# Configuration Dashboard Climatique - Docker

# Mode de déploiement (docker, local, remote)
DEPLOYMENT_MODE=docker

# URLs API selon l'environnement
API_BASE_URL=http://backend:8000/api/v1/climate                                    # Docker
API_BASE_URL_LOCAL=http://localhost:8000/api/v1/climate                           # Local
API_BASE_URL_REMOTE=https://backend-dasboard-climatique-1.onrender.com/api/v1/climate  # Remote

# Configuration Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Debug
DEBUG_MODE=false

# Paramètres par défaut de l'interface
DEFAULT_START_YEAR=1980
DEFAULT_END_YEAR=2020
DEFAULT_VARIABLE=tasmin

# Docker spécifique
COMPOSE_PROJECT_NAME=climate_dashboard